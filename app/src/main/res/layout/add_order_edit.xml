<?xml version="1.0" encoding="utf-8"?>
<in.vaksys.takeorder.extras.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/percentEnterCarDetails11"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="8dp"
    android:background="@drawable/dialog_shape"
    android:orientation="vertical"
    android:padding="8dp"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_widthPercent="90%">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Buyer Name"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/et_buyerName_addContact_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:background="@drawable/rectangle_border"
                android:hint="Buyer Name"
                android:lines="1"
                android:padding="8dp"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Phone"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/et_phone_addContact_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:background="@drawable/rectangle_border"
                android:digits="0123456789"
                android:hint="Phone"
                android:lines="1"
                android:maxLength="10"
                android:padding="8dp"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="City"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/et_city_addContact_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:background="@drawable/rectangle_border"
                android:hint="City"
                android:lines="1"
                android:padding="8dp"
                android:textSize="12sp" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_save_addContact_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_shape"
            android:padding="10dp"
            android:text="save"
            android:textAllCaps="true"
            android:textColor="#FFFFFF" />


    </LinearLayout>

</in.vaksys.takeorder.extras.PercentLinearLayout>